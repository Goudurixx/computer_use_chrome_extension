{
  "name": "Claude Computer Use Demo",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Pilot Chrome via Claude Computer Use through a local WebSocket server.",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "sidePanel",
    "scripting",
    "activeTab",
    "tabs",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "sidepanel/index.html"
  },
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_title": "Open Chat Interface"
  }
}
